{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "extension",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "declaration": false,
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./node_modules/@types/chrome",
      "./node_modules/@types",
    ],
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "rollup.config.js",
  ]
}